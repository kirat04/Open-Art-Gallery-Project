html
    head 
        title Notifications
        link(rel="stylesheet" href="/styles.css")
    body.homepagebackground
        include ../partials/header
        div.notifcenter
            p.notiftitle New Art
            
            each artNotif in userArtNotif
                if artNotif.viewed 
                    h7 
                        span
                            a(href="/user/"+artNotif.artist._id) #{artNotif.artist.name}
                        span  added 
                        span 
                            a(href="/art/"+artNotif.art._id) #{artNotif.art.title}
                        span  to their collection.
                else
                    h7.bold 
                        span
                            a(href="/user/"+artNotif.artist._id) #{artNotif.artist.name}
                        span  added 
                        span 
                            a(href="/art/"+artNotif.art._id) #{artNotif.art.title}
                        span  to their collection.
                br
            br
            |
            br
            |
            br
            p.notifTitle New Workshops
            each workshopNotif in userWorkshopNotif 
                if workshopNotif.viewed
                    h7 
                        span
                            a(href="/user/"+workshopNotif.artist._id) #{workshopNotif.artist.name}
                        span  added 
                        span 
                            a(href="/workshops/"+workshopNotif.workshop._id) #{workshopNotif.workshop.title}
                        span  to their collection.
                else 
                    h7.bold 
                        span
                            a(href="/user/"+workshopNotif.artist._id) #{workshopNotif.artist.name}
                        span  added 
                        span 
                            a(href="/workshops/"+workshopNotif.workshop._id) #{workshopNotif.workshop.title}
                        span  to their collection.
                br
            br
            |
            br
            input(type="button", value="Clear Notifications" id="delNotif")
        script(src="/viewNotifs.js")